<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DailyApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/red_center</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- TimePickerStyle -->
        <item name="android:timePickerStyle">@style/TimePicker</item>

        <!-- DatePickerStyle -->
        <item name="android:datePickerStyle">@style/DatePicker</item>
    </style>

    <style name="TimePicker"  parent="android:Widget.Material.Light.TimePicker">
        <item name="android:headerBackground">@color/red_center</item>
        <item name="android:numbersSelectorColor">@color/red_center</item>
    </style>

    <style name="DatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">calendar</item>
    </style>

</resources>